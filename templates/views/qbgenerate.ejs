  <script>
    let counter = 0;
    let hamburgerbtn = document.getElementById("hbtn")
    let brandq = document.getElementById("brandq")
    let maindiv=document.getElementById('maindiv');
    maindiv.style.margin = "0px 0px 0px 255px";
    let maxt = 0;
    let maxe = 0;
    let maxm = 0;
    let maxh = 0;


    window.onload = () => {
      hamburgerbtn.style.transform = "translateX(8.5rem) translateY(-5.5rem)"
    }
    hamburgerbtn.addEventListener('click', () => {

      if (counter == 0) {
        hamburgerbtn.style.transform = "translateX(-0.5rem) translateY(-5.5rem)"
        brandq.style.transform = "translateX(-10rem)"
        counter = 1;
        maindiv.style.margin = "0px 0px 0px 70px";
      }
      else {
        hamburgerbtn.style.transform = "translateX(8.5rem) translateY(-5.5rem)"
        brandq.style.transform = "translateX(0rem)"
        counter = 0;
        maindiv.style.margin = "0px 0px 0px 255px";
      }
    })

    let q1 = document.getElementById("q1");
    let q2 = document.getElementById("q2");
    let total = document.getElementById('total');
    let easy = document.getElementById('easy');
    let hard = document.getElementById('hard');
    let moderate = document.getElementById('moderate');
    let errmsg = document.getElementById('errmsg');
    let submitbtn = document.getElementById('submitbtn');

    total.addEventListener('keypress', function (e) {
      if (e.keyCode === 13 || e.which === 13) {
        checkForm();
        console.log("total")
        e.preventDefault();
        return false;
      }
    });


    easy.addEventListener('keypress', function (e) {
      if (e.keyCode === 13 || e.which === 13) {
        checkForm();
        console.log("easy")
        e.preventDefault();
        return false;
      }
    });

    moderate.addEventListener('keypress', function (e) {
      if (e.keyCode === 13 || e.which === 13) {
        checkForm();
        console.log("moderate")
        e.preventDefault();
        return false;
      }
    });

    hard.addEventListener('keypress', function (e) {
      if (e.keyCode === 13 || e.which === 13) {
        checkForm();
        console.log("hard")
        e.preventDefault();
        return false;
      }
    });


    
    async function fetchsubjects() {
      const branch = document.getElementById("branch").value;
       
      const subjectData = await fetch(`http://127.0.0.1:9000/admin/getsubjectlist${branch}`).then(response => response.json()).then(data => data )
      const subject = document.getElementById("subject")
      subject.innerHTML=''
      for (let i = 0; i < subjectData.length; i++) {
        subject.innerHTML += `<option value=${subjectData[i].subject_name}>${subjectData[i].subject_name}</option>`
      }
    }

    async function fetchquestioncount() {
      const subject = document.getElementById("subject").value;
      const questionData = await fetch(`http://127.0.0.1:9000/admin/getquestiondata${subject}`).then(response => response.json()).then(data => data )
      var easy =0;
      var medium=0;
      var hard=0;
      questionData.forEach(data=>{
        if(data._id=='easy') {
          easy=data.count;
          maxe = data.count;
          maxt= maxt+data.count;
        }
        if(data._id=='hard') {
          hard=data.count;
          maxm = data.count;
          maxt= maxt+data.count;
        }

        if(data._id=='medium') {
          medium=data.count;
          maxh = data.count;
          maxt= maxt+data.count;
        }
       
      })
      // console.log(easy)
      // console.log(medium)
      // console.log(hard)
      maxt= easy+medium+hard;
      totalnumberofquestion.innerHTML=`<span style="color: rgb(104, 104, 104);">Total Questions Available:</span><span id="tm"> ${easy+medium+hard}</span>`
      noofeasyquestions.innerHTML=`<span style="color: rgb(104, 104, 104);">Total Questions Available:</span><span id="em" >${medium} </span>`
      noofmediumquestions.innerHTML=`<span style="color: rgb(104, 104, 104);">Total Questions Available:</span><span id="mm" >${easy} </span>`
      noofhardquestions.innerHTML=`<span style="color: rgb(104, 104, 104);">Total Questions Available:</span><span id="hm" >${hard} </span>`


      
    }


    function checkForm() {
      let wrong = false;
      maxt = parseInt(document.getElementById("tm").innerHTML);
      maxe = parseInt(document.getElementById("em").innerHTML);
      maxm = parseInt(document.getElementById("mm").innerHTML);
      maxh = parseInt(document.getElementById("hm").innerHTML);
      console.log(total.value>maxt);
      let totalexceed = false;
      if(total.value > maxt){
        wrong = true;
        total.style.border = "1px solid red";
        errmsg.style.visibility = "visible";
        submitbtn.disabled = true;
        totalexceed = true;
        errmsg.innerHTML = "Maximum Number of Questions Exceeded!!";
      }else{
        total.style.border = "none";
        totalexceed=false
      }

      if(easy.value>maxe){
        wrong = true;
        easy.style.border = "1px solid red";
        errmsg.style.visibility = "visible";
        submitbtn.disabled = true;
        errmsg.innerHTML = "Maximum Number of Questions Exceeded!!";
      }else{
        easy.style.border = "none";
      }
      if(moderate.value>maxm){
        wrong = true;
        moderate.style.border = "1px solid red";
        errmsg.style.visibility = "visible";
        submitbtn.disabled = true;
        errmsg.innerHTML = "Maximum Number of Questions Exceeded!!";
      }else{
        moderate.style.border = "none";
      }
      if(hard.value>maxh){
        wrong = true;
        hard.style.border = "1px solid red";
        errmsg.style.visibility = "visible";
        submitbtn.disabled = true;
        errmsg.innerHTML = "Maximum Number of Questions Exceeded!!";
      }else{
        hard.style.border = "none";
      }

      if ((easy.value+moderate.value+hard.value) > total.value) {
        
        wrong = true;
        total.style.border = "1px solid red";
        errmsg.style.visibility = "visible";
        submitbtn.disabled = true;
        errmsg.innerHTML = "Total Number of Questions Exceeded!!";
      }else{
        if(!totalexceed){
          total.style.border = "none";
        }
      }

      if ((easy.value+moderate.value+hard.value) < total.value && easy.value>0  && moderate.value>0  && hard.value>0 ) {
        
        wrong = true;
        total.style.border = "1px solid red";
        errmsg.style.visibility = "visible";
        submitbtn.disabled = true;
        errmsg.innerHTML = "Total Number of Questions Not Match!!";
      }else{
        if(!totalexceed){
          total.style.border = "none";
        }
      }

      if(wrong == false){
        errmsg.style.visibility = "hidden";
        submitbtn.disabled = false;
      }
    }


  </script>

