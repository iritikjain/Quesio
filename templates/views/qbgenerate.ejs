                    <input style="width: 100%;" type="number" id="duration" class="form-control bg-white" name="timeduration" value="" placeholder="Duration of exam" required>
                  </div>


                </div>
                <div class="row" style="display:flex; justify-content:space-between; padding-right: 10.5rem;">
                  <div class="col-md-5 mb-3 p-1">
                    <label for="validationTooltip01">Marks per question</label>
                    <input style="width: 100%;" type="number" id="marks" class="form-control bg-white" name="marks" value="" placeholder="Enter Marks" required>
                  </div>

                  <div class="col-md-5 mb-3 p-1" style="max-width: 41%;">
                    <label for="validationTooltip01">Date</label>
                    <input style="width: 100%;" type="date" id="duration" class="form-control bg-white" name="date" value="" placeholder="Enter Date" required>
                  </div>


                </div>
                <div class="row" id="q1">
