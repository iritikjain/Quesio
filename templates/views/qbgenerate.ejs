          <div class="mt-0 m-3">
            <form action="/qbgenerate" onsubmit="checkForm()" method="POST">
              <div class="pl-5 ml-5">
                <div class="row">
                  <div class="col-md-6 mb-3 p-1">
                    <label for="inputlg">University/Board</label>
                    <input type="text" class="form-control bg-white col-md-12 input-group-lg" name="university"
                      id="inputlg" value="Mumbai University" placeholder="University/Board Name" required disabled>
                  </div>
                  <div class="col-md-5 mb-3 p-1">
                    <label for="validationTooltip02">Branch</label>
                    <div class="dropdown">
                      <select onchange="fetchsubjects()" class="custom-select col-10 text-muted pl-4" style="height:3rem; border:none;" id="branch"
                        name="branch" required>
                        <option value="">Choose Branch</option>
                        <% totalbranch.forEach(branch=>{ %>
